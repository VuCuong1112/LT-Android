<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.vucuong.mycaucaltor.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:weightSum="1">

        <EditText
            android:id="@+id/txtKetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_weight="0.81" />


        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Delete" />


    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnBay"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="7" />

        <Button
            android:id="@+id/btnBon"
            style="?android:attr/buttonStyleSmall"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/btnMot"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="1" />

        <Button
            android:id="@+id/btnDauCham"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="." />

        <Space />

        <Button
            android:id="@+id/btnTam"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="8" />

        <Space />

        <Button
            android:id="@+id/btnNam"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="5" />

        <Button
            android:id="@+id/btnHai"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="2" />

        <Button
            android:id="@+id/btnKhong"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="0" />

        <Button
            android:id="@+id/btnChin"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="9" />

        <Button
            android:id="@+id/btnSau"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="6" />

        <Button
            android:id="@+id/btnBa"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="3" />

        <Button
            android:id="@+id/btnBang"
            style="?android:attr/buttonStyleSmall"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="=" />

        <Button
            android:id="@+id/btnChia"
            android:layout_column="4"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="0"
            android:text="Chia" />

        <Button
            android:id="@+id/btnNhan"
            android:layout_column="4"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="1"
            android:text="Nhân" />

        <Button
            android:id="@+id/btnTru"
            android:layout_column="4"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="2"
            android:text="Trừ" />

        <Button
            android:id="@+id/btnCong"
            android:layout_column="4"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="3"
            android:text="Cộng" />
    </GridLayout>

</LinearLayout>
