<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mh2_ImgBan"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_height="80dp"
        android:layout_width="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_ban" />

    <TextView
        android:id="@+id/mh2_txtSoBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mh2_ImgBan"
        app:layout_constraintEnd_toEndOf="@+id/mh2_ImgBan"
        app:layout_constraintStart_toStartOf="@+id/mh2_ImgBan"
        app:layout_constraintTop_toTopOf="@+id/mh2_ImgBan" />
</android.support.constraint.ConstraintLayout>